<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

<RelativeLayout
    android:id="@+id/left"
    android:layout_width="200dp"
    android:layout_height="500dp"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/thelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/typeline"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/type_ph"
        android:layout_toEndOf="@id/thelistview"
        android:layout_toRightOf="@id/sendbtn"/>

    <Button
        android:id="@+id/sendbtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/thelistview"
        android:text="@string/send"
        android:layout_toLeftOf="@id/typeline"/>

    <Button
        android:id="@+id/rcvbtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/receive"
        android:layout_toEndOf="@id/thelistview"
        android:layout_toRightOf="@id/typeline"/>

</RelativeLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignRight="@id/left"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="760dp" />

</RelativeLayout>